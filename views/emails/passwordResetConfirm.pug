extends baseEmail

block content
    p Hi #{firstName},
    p Your password has been reset. Please log in with your new password.
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank') Visit Natours
    p If you didn't reset your password, please ignore this email!